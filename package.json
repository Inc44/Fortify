{
	"name": "fortify-formatter",
	"displayName": "Fortify Formatter",
	"description": "Fortify formatter for various languages",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:javascript",
		"onLanguage:python",
		"onLanguage:php",
		"onLanguage:rust"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fortify-formatter.format",
				"title": "Format with Fortify Formatter"
			}
		],
		"configuration": {
			"title": "Fortify Formatter",
			"properties": {
				"fortifyFormatter.blackPath": {
					"type": "string",
					"default": "black",
					"description": "Path to the Black formatter executable"
				},
				"fortifyFormatter.rustfmtPath": {
					"type": "string",
					"default": "rustfmt",
					"description": "Path to the Rustfmt executable"
				}
			}
		}
	},
	"scripts": {
		"package": "vsce package"
	},
	"dependencies": {
		"js-beautify": "^1.15.4",
		"prettier": "^3.5.3",
		"@prettier/plugin-php": "^0.22.4",
		"tmp": "^0.2.3"
	},
	"devDependencies": {
		"@types/vscode": "^1.98.0",
		"@types/node": "^22.13.10",
		"vsce": "^3.2.2"
	}
}