{
	"name": "fortify-formatter",
	"displayName": "Fortify Formatter",
	"version": "1.0.0",
	"publisher": "Inc44",
	"description": "A formatter for various languages with specific configurations.",
	"author":
	{
		"name": "Inc44"
	},
	"categories": ["Formatters"],
	"icon": "fortify.png",
	"pricing": "Free",
	"activationEvents": ["onStartupFinished"],
	"engines":
	{
		"vscode": "^1.60.0"
	},
	"main": "./extension.js",
	"scripts":
	{
		"package": "vsce package"
	},
	"devDependencies":
	{
		"@types/vscode": "^1.60.0",
		"@types/node": "^22.13.10",
		"@vscode/vsce": "^3.2.2"
	},
	"license": "SEE LICENSE IN LICENSE",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/Inc44/Fortify.git"
	},
	"homepage": "https://github.com/Inc44/Fortify/blob/master/README.md",
	"dependencies":
	{
		"js-beautify": "^1.15.4",
		"prettier": "^3.5.3",
		"@prettier/plugin-php": "^0.22.4",
		"tmp": "^0.2.3"
	},
	"contributes":
	{
		"commands": [
		{
			"command": "fortifyFormatter.formatDocument",
			"title": "Format with Fortify Formatter"
		}],
		"menus":
		{
			"editor/context": [
			{
				"command": "fortifyFormatter.formatDocument",
				"group": "1_modification",
				"when": "editorHasDocumentFormattingProvider && editorLangId == javascript || editorLangId == css || editorLangId == html || editorLangId == python || editorLangId == php || editorLangId == rust"
			}]
		},
		"configuration":
		{
			"title": "Fortify Formatter",
			"properties":
			{
				"fortifyFormatter.blackPath":
				{
					"type": "string",
					"default": "black",
					"description": "Path to the Black formatter executable"
				},
				"fortifyFormatter.rustfmtPath":
				{
					"type": "string",
					"default": "rustfmt",
					"description": "Path to the Rustfmt executable"
				}
			}
		}
	}
}