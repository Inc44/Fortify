{
	"name": "fortify-formatter",
	"displayName": "Fortify Formatter",
	"version": "1.0.3",
	"publisher": "Inc44",
	"description": "Yet another formatter.",
	"author":
	{
		"name": "Inc44"
	},
	"categories": ["Formatters"],
	"icon": "fortify.png",
	"pricing": "Free",
	"activationEvents": ["onStartupFinished"],
	"engines":
	{
		"vscode": "^1.60.0"
	},
	"main": "./extension.js",
	"scripts":
	{
		"package": "vsce package"
	},
	"devDependencies":
	{
		"@types/vscode": "^1.60.0",
		"@types/node": "^22.13.10",
		"@vscode/vsce": "^3.2.2"
	},
	"license": "SEE LICENSE IN LICENSE",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/Inc44/Fortify.git"
	},
	"homepage": "https://github.com/Inc44/Fortify/blob/master/README.md",
	"dependencies":
	{
		"@prettier/plugin-php": "0.19.0",
		"js-beautify": "1.15.4",
		"prettier": "2.8.8"
	},
	"contributes":
	{
		"commands": [
		{
			"command": "fortifyFormatter.formatDocument",
			"title": "Format with Fortify Formatter"
		}],
		"menus":
		{
			"editor/context": [
			{
				"command": "fortifyFormatter.formatDocument",
				"group": "1_modification",
				"when": "editorLangId == asm-intel-x86-generic || editorHasDocumentFormattingProvider && (editorLangId == css || editorLangId == html || editorLangId == javascript || editorLangId == json || editorLangId == kotlin || editorLangId == php || editorLangId == rust)"
			}]
		},
		"configuration":
		{
			"title": "Fortify Formatter",
			"properties":
			{
				"fortifyFormatter.ktfmtPath":
				{
					"type": "string",
					"default": "",
					"description": "Path to the ktfmt executable"
				}
			}
		}
	}
}